<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
   
    <context-param>
        <param-name>webMaster</param-name>
        <param-value>webmaster@LPMPizza.com</param-value>
    </context-param>
    <context-param>
        <param-name>dailySpecial</param-name>
        <param-value>Today's Special: Free garlic bread with order of any 2 items</param-value>
    </context-param>
    <listener>
        <description>ServletContextListener</description>
        <listener-class>SROS.listener.StartupServletListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>MenuController</servlet-name>
        <servlet-class>SROS.controller.MenuController</servlet-class>
        <init-param>
            <param-name>custServEmail</param-name>
            <param-value>custserv@LPMPizza.com</param-value>
        </init-param>
        <init-param>
            <param-name>dbUrl</param-name>
            <param-value>jdbc:mysql://localhost:3306/restaurant_db</param-value>
        </init-param>
        <init-param>
            <param-name>dbUsername</param-name>
            <param-value>root</param-value>
        </init-param>
        <init-param>
            <param-name>dbPassword</param-name>
            <param-value>admin</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>OrderController</servlet-name>
        <servlet-class>SROS.controller.OrderController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MenuMaintainController</servlet-name>
        <servlet-class>SROS.controller.MenuMaintainController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MenuAddController</servlet-name>
        <servlet-class>SROS.controller.MenuAddController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MenuController</servlet-name>
        <url-pattern>/MenuController.jsp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OrderController</servlet-name>
        <url-pattern>/OrderController.jsp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MenuMaintainController</servlet-name>
        <url-pattern>/MenuMaintainController.jsp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MenuAddController</servlet-name>
        <url-pattern>/MenuAddController.jsp</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>    

    </web-app>
